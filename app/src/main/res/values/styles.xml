<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!--<item name="android:windowActionBar">false</item>-->
        <!--<item name="android:windowNoTitle">true</item>-->
        <item name="android:configChanges">keyboardHidden|orientation</item>
        <item name="android:launchMode">singleTask</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:screenOrientation">landscape</item>
        <!--<item name="android:windowFullscreen">true</item>-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:actionBarStyle">
            @android:style/Widget.Holo.Light.ActionBar.Solid.Inverse
        </item>
        <item name="actionBarWidgetTheme">@android:style/Theme.Holo</item>
        <!--<item name="actionDropDownStyle">@android:style/Widget.Holo.Spinner.DropDown.ActionBar</item>-->
        <item name="actionButtonStyle">@android:style/Widget.Holo.ActionButton</item>
        <item name="actionOverflowButtonStyle">@android:style/Widget.Holo.ActionButton.Overflow
        </item>
        <item name="actionModeBackground">@color/white</item>
        <item name="actionMenuTextColor">?android:attr/textColorPrimaryInverse</item>
        <item name="android:actionMenuTextAppearance">@style/MenuTextStyle</item>
        <item name="actionMenuTextAppearance">@style/MenuTextStyle</item>
        <item name="actionModePopupWindowStyle">@android:style/Widget.Holo.Light.ActionMode</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="toolbarNavigationButtonStyle">@style/myToolbarNavigationButtonStyle</item>
    </style>
    <!-- toolbar navigation style-->
    <style name="myToolbarNavigationButtonStyle" parent="@style/Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">@dimen/toolbar_height</item>
        <!--<item name="android:padding">@dimen/padding</item>-->
        <item name="android:scaleType">centerCrop</item>
    </style>
    <!-- toolbar菜单文字尺寸 -->
    <style name="MenuTextStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/toolbar_action_menu_text</item>
    </style>

    <!-- 设置Toolbar标题字体的大小 -->
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/toolbar_action_menu_text</item>
    </style>
    <!-- toolbar菜单样式 -->
    <style name="ToolbarTheme" parent="Theme.AppCompat">
        <item name="titleTextAppearance">@style/Toolbar.TitleText</item><!--标题文字字体大小-->
        <item name="android:actionMenuTextAppearance">@style/MenuTextStyle</item>
        <item name="actionMenuTextAppearance">@style/MenuTextStyle
        </item><!--菜单文字字体大小 此处不管用 要设置到AppTheme中-->
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/toolbar_action_menu_text</item> <!--字体大小-->
        <item name="titleTextColor">@android:color/white</item>
        <item name="android:actionBarSize">@dimen/toolbar_height</item>
        <item name="toolbarNavigationButtonStyle">@style/myToolbarNavigationButtonStyle</item>
        <item name="actionMenuTextColor">@android:color/black</item>
    </style>
    <!-- Toolbar popup主题 -->
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="style_item_text">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="style_content_text">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <dimen name="toolbar_height">48dp</dimen>
    <dimen name="toolbar_action_menu_text">16sp</dimen>
</resources>
